doctype html
html

	head
		meta(charset='utf-8')
		title
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
		link(rel='shortcut icon', href='img/favicon.ico', type='image/x-icon')
		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato:900|Montserrat:300,400,500,600,700|Raleway")
		link(rel='stylesheet', href='css/style.css')
		style.
			*,
			*::after,
			*::before {
				//- outline: 1px solid rgba(255,0,0,.5) !important
			}
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")

	body
		.w-page
			include _header
			.main
				.main__inner
					section.main__contact
						.contact
							.contact__wrapp
								.contact__left
									img.contact__ava(src="img/ava.jpg", alt="")
									.contact__socials
										a.contact__socials-item.contact__socials-item--phone(href="")
										a.contact__socials-item.contact__socials-item--mail(href="")
										a.contact__socials-item.contact__socials-item--facebook(href="")
										a.contact__socials-item.contact__socials-item--instagram(href="")
								.contact__right
									p.contact__title Contact
									p.contact__name Denis Gromov
									form.contact__form.form
										.form__group
											label.form__label(for="name") Name
											input(type="text", name="name", required).form__field#name
										.form__group
											label.form__label(for="phone") Phone
											input(type="text", name="phone", required).form__field#phone
										.form__group
											label.form__label(for="msg") Message
											textarea(type="text", name="msg", required, rows="5").form__field#msg
										button.form__btn.btn Отправить
			include _footer

		script(src="js/jquery.masonry.min.js")
		script(src="js/common.js")
		script(src="js/common-contacts.js")


